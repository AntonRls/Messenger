<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MainPage">
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

         
            <Entry x:Name="IdEntry" Placeholder="Введите ID" VerticalTextAlignment="Center"  />
            <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" VerticalTextAlignment="Center" />

            <Button Text="Войти" Clicked="AuthUser"/>
            <Label Text="Зарегистрироваться" TextDecorations="Underline" HorizontalTextAlignment="Center" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OpenRegister"/>
                </Label.GestureRecognizers>
            </Label>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
