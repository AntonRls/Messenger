<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.NewsPage"
             Title="NewsPage">
    <Grid>
        <ListView x:Name="listView" Margin="20, 20, 20, 20" VerticalScrollBarVisibility="Always" ItemTapped="listView_ItemTapped" RowHeight="{OnIdiom Phone=125}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Padding="25">
                            <Image Source="{Binding Image}" MaximumWidthRequest="50" MaximumHeightRequest="50"/>
                            <Label Text="{Binding FullName}" Margin="10" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>