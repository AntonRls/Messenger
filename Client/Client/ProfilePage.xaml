<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.ProfilePage"
             Title="ProfilePage">

    <ScrollView>
        <VerticalStackLayout Spacing="5" Margin="20" Padding="20">
            <Image x:Name="Avatar" MaximumWidthRequest="100" MaximumHeightRequest="100" />
            <Label x:Name="UserName" HorizontalOptions="Center"/>
            <Button Text="Загрузить аватарку" Clicked="LoadImage"/>
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>