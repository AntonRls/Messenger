<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.RegisterPage"
             Title="Регистрация">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Entry x:Name="NameEntry" Placeholder="Введите ваше имя" VerticalTextAlignment="Center"  />
        <Entry x:Name="LastNameEntry" Placeholder="Введите вашу фамилию" VerticalTextAlignment="Center"  />
        <Entry x:Name="PasswordEntry" Placeholder="Придумайте пароль" VerticalTextAlignment="Center" />

        <Button Text="Зарегистрироваться" Clicked="Register"/>
            <Label Text="Войти" TextDecorations="Underline" HorizontalTextAlignment="Center" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OpenLogin"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>